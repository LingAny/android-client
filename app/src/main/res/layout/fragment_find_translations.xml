<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/fragment_translation_bg_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/contentMarginBottom"
        android:layout_marginLeft="@dimen/contentMargin"
        android:layout_marginRight="@dimen/contentMargin"
        android:background="@drawable/fragment_content_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wordToTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/contentMargin"
            android:textSize="48sp"
            />

        <LinearLayout
            android:id="@+id/containerContextFindTranslation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/fragment_content_score_bg"
            android:gravity="center"
            android:layout_marginTop="@dimen/contentMargin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/containerContextTimeCounterFindTranslation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:textSize="30sp"/>

            <LinearLayout
                android:id="@+id/containerMarkAndCross"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView
                android:id="@+id/containerContextWordCounterFindTranslation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/fragmentButtonMarginEnd"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/leftUpperButton"
                android:layout_width="match_parent"
                android:background="@drawable/fragment_translation_button_bg"
                android:textColor="@color/white"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/contentMargin"
                android:layout_marginBottom="@dimen/contentMarginHalf"
                android:layout_marginStart="@dimen/contentMargin"
                android:layout_marginEnd="@dimen/contentMarginHalf"
                android:textSize="16sp"
                android:layout_gravity="start|top"
                />
            <Button
                android:id="@+id/leftDownButton"
                android:layout_width="match_parent"
                android:background="@drawable/fragment_translation_button_bg"
                android:textColor="@color/white"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/contentMarginHalf"
                android:layout_marginBottom="@dimen/contentMargin"
                android:layout_marginStart="@dimen/contentMargin"
                android:layout_marginEnd="@dimen/contentMarginHalf"
                android:textSize="16sp"
                android:layout_gravity="start|bottom"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/rightUpperButton"
                android:layout_width="match_parent"
                android:background="@drawable/fragment_translation_button_bg"
                android:textColor="@color/white"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/contentMargin"
                android:layout_marginBottom="@dimen/contentMarginHalf"
                android:layout_marginStart="@dimen/contentMarginHalf"
                android:layout_marginEnd="@dimen/contentMargin"
                android:textSize="16sp"
                android:layout_gravity="end|top"
                />

            <Button
                android:id="@+id/rightDownButton"
                android:layout_width="match_parent"
                android:background="@drawable/fragment_translation_button_bg"
                android:textColor="@color/white"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/contentMarginHalf"
                android:layout_marginBottom="@dimen/contentMargin"
                android:layout_marginStart="@dimen/contentMarginHalf"
                android:layout_marginEnd="@dimen/contentMargin"
                android:textSize="16sp"
                android:layout_gravity="end|bottom"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>