<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.tp.lingany.lingany.activities.TrainingSprintActivity">

    <TextView
        android:id="@+id/trainingSprintTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/headerTrainingSprint"
        android:textSize="35sp"
        android:layout_gravity="center|top"
        />

    <ProgressBar
        android:id="@+id/timeEstimates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/wordToTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/wordTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:id="@+id/containerForMarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:padding="50dp"
        android:orientation="horizontal">
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/agreeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/contentMargin"
            android:layout_gravity="center|start"
            android:text="@string/agreeButton"
        />
        <Button
            android:id="@+id/notAgreeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/contentMargin"
            android:layout_gravity="center|end"
            android:text="@string/notAgreeButton"
            />
    </FrameLayout>

</LinearLayout>
