<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/fragment_sprint_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/contentMarginBottom"
        android:layout_marginLeft="@dimen/contentMargin"
        android:layout_marginRight="@dimen/contentMargin"
        android:background="@drawable/fragment_content_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wordToTranslateSprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/wordTranslationSprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/green"
            android:layout_marginTop="@dimen/contentMargin"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/containerMarkAndCrossSprint"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/fragment_content_score_bg"
            android:gravity="center"
            android:layout_marginTop="@dimen/contentMargin"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/fragmentButtonMarginEnd"
        android:orientation="horizontal">

        <Button
            android:id="@+id/agreeButtonSprint"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="@dimen/contentMargin"
            android:layout_marginEnd="@dimen/contentMargin"
            android:layout_marginStart="@dimen/contentMargin"
            android:layout_marginTop="@dimen/contentMargin"
            android:layout_weight="1"
            android:text="@string/agreeButton"
            android:background="@drawable/fragment_sprint_button_bg"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/notAgreeButtonSprint"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="@dimen/contentMargin"
            android:layout_marginEnd="@dimen/contentMargin"
            android:layout_marginStart="@dimen/contentMargin"
            android:layout_marginTop="@dimen/contentMargin"
            android:layout_weight="1"
            android:text="@string/notAgreeButton"
            android:background="@drawable/fragment_sprint_button_bg"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

</FrameLayout>