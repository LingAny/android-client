<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wordToTranslateSprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/wordTranslationSprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            />
        <LinearLayout
            android:id="@+id/containerMarkAndCrossSprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/agreeButtonSprint"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:textSize="23sp"
            android:layout_gravity="start|bottom"
            android:text="@string/agreeButton"
            />

        <Button
            android:id="@+id/notAgreeButtonSprint"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:textSize="23sp"
            android:layout_gravity="end|bottom"
            android:text="@string/notAgreeButton"
            />
    </FrameLayout>

</FrameLayout>